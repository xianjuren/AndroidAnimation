<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        style="@style/view_animation_item"
        android:layout_marginTop="50dp"
        android:onClick="overrideActivity"
        android:text="@string/activity_animation"
        />

    <TextView
        style="@style/view_animation_item"
        android:onClick="layoutAnimation"
        android:text="@string/layout_animation"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycle_view_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
</LinearLayout>