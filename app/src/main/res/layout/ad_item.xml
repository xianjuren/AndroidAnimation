<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/ad_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/activity_shortcut_ad_image_view"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY"
            android:src="@mipmap/default_ad"/>


        <TextView
            android:id="@+id/activity_shortcut_ad_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:text="百花山"
            android:textColor="@color/view_animation_item_text_color"
            android:textSize="16sp"/>


        <TextView
            android:id="@+id/activity_shortcut_ad_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lineSpacingExtra="5dp"
            android:lines="2"
            android:text="百花山的风景资源分为百花山主峰景区、百花草甸景区、望海楼景区、百花山云海、百花山云"
            android:textColor="@color/view_animation_item_text_color"
            android:textSize="14sp"/>


        <Button
            android:id="@+id/activity_shortcut_ad_install"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/install_btn_selector"
            android:ellipsize="end"
            android:lines="1"
            android:paddingBottom="11dp"
            android:paddingTop="11dp"
            android:text="@string/install"
            android:textColor="@color/white"
            android:textSize="18sp"/>
    </LinearLayout>

</RelativeLayout>